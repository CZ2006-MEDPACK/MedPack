<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vitalsign.ScanVitalSignsActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"/>

    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar_1"
        app:max="100"
        app:ringColor="@color/colorPrimary"
        app:ringProgressColor="@color/colorSecondaryLight"
        app:ringWidth="5dp"
        app:style="STROKE"
        app:textColor="@color/colorPrimary"
        app:textIsShow="true"
        app:textSize="16sp"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/progress_bar_1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="35dp"
        android:text="Place your finger on the optical sensor and tap 'Begin Scan' to measure your vital signs."
        android:textAlignment="center"
        app:fontFamily="@font/dosis_semibold" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/scanButton"
        android:layout_marginBottom="1dp"
        android:background="@color/colorSecondary"
        android:fontFamily="@font/dosis_semibold"
        android:text="Confirm"
        android:textColor="#fff" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/scanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorSecondaryLight"
        android:fontFamily="@font/dosis_semibold"
        android:text="Begin Scan"
        android:textColor="#fff" />

</RelativeLayout>