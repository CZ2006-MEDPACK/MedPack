<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/radioButton6"
        android:layout_toEndOf="@+id/textViewTitle"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="3"
        android:textColor="@android:color/black" />

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/radioButton4"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="4"
        android:textColor="@android:color/black" />

    <RadioButton
        android:id="@+id/radioButton6"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/radioButton5"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="5"
        android:textColor="@android:color/black" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignEnd="@+id/textViewTitle"
        android:layout_alignTop="@+id/radioButton4"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="2"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="236dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="Your Vital Signs"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="sans" />

    <EditText
        android:id="@+id/editTextRespiratoryRate"
        android:layout_width="166dp"
        android:layout_height="21dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="244dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextBPSystolic"
        android:layout_width="166dp"
        android:layout_height="21dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextBPDiastolic"
        android:layout_width="168dp"
        android:layout_height="21dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewBPDiastolic"
        android:layout_marginEnd="15dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextPulseRate"
        android:layout_width="164dp"
        android:layout_height="21dp"
        android:layout_alignEnd="@+id/editTextBox"
        android:layout_alignTop="@+id/textViewPulseRate"
        android:layout_marginEnd="3dp"
        android:ems="10" />

    <EditText
        android:id="@+id/editTextOxygenSaturation"
        android:layout_width="163dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/editTextRespiratoryRate"
        android:layout_alignTop="@+id/textViewOxygen"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:text="100"
        android:textSize="12sp" />

    <!--<EditText
        android:id="@+id/editText4"
        android:layout_width="164dp"
        android:layout_height="27dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="169dp"
        android:ems="10"
        android:text="Name" /> -->

    <EditText
        android:id="@+id/editTextBox"
        android:layout_width="357dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="81dp"
        android:ems="10"
        android:inputType="textLongMessage" />

    <TextView
        android:id="@+id/textViewAnySymptoms"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_marginBottom="156dp"
        android:text="Any Symptoms?"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_marginBottom="204dp"
        android:text="Enter Pain Scale:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewBPSystolic"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_centerVertical="true"
        android:text="Enter BP(Systolic): "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewBPDiastolic"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_marginBottom="246dp"
        android:text="Enter BP(Diastolic): "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewRespiratoryRate"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_alignTop="@+id/editTextRespiratoryRate"
        android:text="Enter Respiratory Rate: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewEnterTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_marginTop="210dp"
        android:text="Enter Temperature: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewOxygen"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_marginTop="127dp"
        android:text="Your Oxygen Saturation: "
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewPleaseEnterBelow"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_marginTop="166dp"
        android:text="Please Enter Below"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewPulseRate"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textViewTitle"
        android:layout_marginTop="98dp"
        android:text="Your Pulse Rate:"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textViewDegreesCelcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewEnterTemperature"
        android:layout_marginEnd="68dp"
        android:text="\u2103"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/editTextEnterTemperature"
        android:layout_width="54dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textViewEnterTemperature"
        android:layout_marginEnd="128dp"
        android:ems="10"
        android:singleLine="true"
        android:text="68"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/radioButton4"
        android:layout_toEndOf="@+id/textViewAnySymptoms"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:text="1"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button"
        android:layout_width="191dp"
        android:layout_height="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Submit" />

</RelativeLayout>