<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/dosis_semibold"
        android:text="Prescription ID:"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/dosis_semibold"
        android:text="Medicine Name:"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:fontFamily="@font/dosis_semibold"
        android:text="Uses:"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp"
        android:fontFamily="@font/dosis_semibold"
        android:text="Dosage:"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/md_prescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginStart="58dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView23"
        android:fontFamily="@font/dosis"
        android:text="Number"
        android:textColor="@color/colorBlack" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/md_medname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/md_dosage"
        android:layout_alignTop="@+id/textView20"
        android:layout_marginStart="43dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/dosis"
        android:text="Medicine name"
        android:textColor="@color/colorBlack" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/md_uses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView21"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView23"
        android:fontFamily="@font/dosis"
        android:text="Uses"
        android:textColor="@color/colorBlack" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/md_dosage"
        android:layout_width="234dp"
        android:layout_height="55dp"
        android:layout_alignTop="@+id/textView23"
        android:layout_alignParentStart="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/dosis"
        android:text="Dosage"
        android:textColor="@color/colorBlack" />
</RelativeLayout>