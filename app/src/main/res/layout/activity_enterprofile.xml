<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/submitProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"
        android:text="Confirm Profile"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="219dp"
        android:text="Date of Birth:" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView15"
        android:layout_alignTop="@+id/spinner_citizenship"
        android:text="Citizenship:" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewTitle2"
        android:layout_alignTop="@+id/radio_male"
        android:text="Gender:" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewTitle2"
        android:layout_marginBottom="179dp"
        android:text="Spoken Languages:" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewTitle2"
        android:layout_marginBottom="85dp"
        android:text="Any Allergy?" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewTitle2"
        android:layout_marginBottom="132dp"
        android:text="Marital Status:" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textViewTitle2"
        android:layout_marginBottom="223dp"
        android:text="Race:" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_contactnumber"
        android:layout_alignStart="@+id/textViewTitle2"
        android:text="Contact Number:" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="122dp"
        android:text="First Name:" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="87dp"
        android:text="Last Name:" />

    <TextView
        android:id="@+id/textViewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="27dp"
        android:text="Enter Profile"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="sans" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="157dp"
        android:text="Address:" />

    <EditText
        android:id="@+id/et_contactnumber"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/textView16"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/et_address"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/et_firstname"
        android:layout_toEndOf="@+id/textView16"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <EditText
        android:id="@+id/et_firstname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toEndOf="@+id/textView16"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_lastname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toEndOf="@+id/textView16"
        android:ems="10"
        android:inputType="textPersonName" />

    <DatePicker
        android:id="@+id/dp_dateofbirth"
        android:layout_width="217dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView13"
        android:layout_toEndOf="@+id/textView16"
        android:ems="10"
        android:inputType="date" />

    <RadioButton
        android:id="@+id/radio_male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinner_race"
        android:layout_centerHorizontal="true"
        android:text="Male"
        android:textSize="12sp" />

    <RadioButton
        android:id="@+id/radio_female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/radio_male"
        android:layout_marginStart="-139dp"
        android:layout_toEndOf="@+id/checkbox_english"
        android:text="Female"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spinner_citizenship"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="257dp"
        android:layout_toEndOf="@+id/textView16" />

    <Spinner
        android:id="@+id/spinner_race"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView17"
        android:layout_toEndOf="@+id/textView16" />

    <CheckBox
        android:id="@+id/checkbox_english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView17"
        android:layout_marginEnd="139dp"
        android:layout_marginTop="-223dp"
        android:text="English"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkbox_mandarin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/et_address"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="-223dp"
        android:text="Mandarin"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkbox_malay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkbox_english"
        android:layout_below="@+id/checkbox_english"
        android:text="Malay"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkbox_tamil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/checkbox_mandarin"
        android:layout_alignTop="@+id/checkbox_malay"
        android:text="Tamil"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spinner_maritalstatus"
        android:layout_width="211dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView19"
        android:layout_toEndOf="@+id/textView16"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_allergy"
        android:layout_width="234dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView18"
        android:layout_toEndOf="@+id/textView16"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>